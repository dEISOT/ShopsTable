@{
    @model IEnumerable<Shop>

}

<div>
    @if (Model != null)
    {
        var shop = Model.ToArray();
        for (int i = 0; i < Model.Count(); i++)
        {
            if (i == 0 || i % 3 == 0)
            {
            @: </div><div class="row">
            }
            <div class="block1"> <a href="#">@shop[i].Name</a> </div>
        }
    }
</div>